<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <square70x70logo src="/assets/img/tile-small.png"/>
      <square150x150logo src="/assets/img/tile-medium.png"/>
      <wide310x150logo src="/assets/img/tile-wide.png"/>
      <square310x310logo src="/assets/img/tile-large.png"/>
      <TileColor>#00a1f1</TileColor>
    </tile>
    <notification>
      <polling-uri src="https://afsukool.github.io/alert/notifications"/>
      <frequency>30</frequency>
      <cycle>1</cycle>
      <fallback>
        <polling-uri src="https://afsukool.github.io/alert/fallback"/>
      </fallback>
    </notification>
  </msapplication>
</browserconfig>

